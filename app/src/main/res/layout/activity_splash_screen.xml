<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/logoSplashscreen"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_local_movies_black_24dp"/>
    <TextView
        android:id="@+id/textLogoSplashscreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mooveey!"
        android:textSize="70sp"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:layout_below="@+id/logoSplashscreen" />
    <ProgressBar
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textLogoSplashscreen"/>

</RelativeLayout>